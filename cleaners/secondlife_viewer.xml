<cleaner id="secondlife_viewer">
  <label>Second Life Viewer</label>
  <description>Game</description>
  <option id="Cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.files" path="~/.secondlife/cache/"/>
    <action command="delete" search="walk.files" path="$USERPROFILE\Application Data\SecondLife\cache\"/>
  </option>
  <option id="Logs">
    <label>Debug logs</label>
    <description>Delete the debug logs</description>
    <action command="delete" search="walk.files" path="~/.secondlife/logs/"/>
    <action command="delete" search="walk.files" path="$USERPROFILE\Application Data\SecondLife\logs\"/>
  </option>
</cleaner>
