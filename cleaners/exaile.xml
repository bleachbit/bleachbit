<cleaner id="exaile" os="linux">
  <label>Exaile</label>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.files" path="~/.exaile/cache/"/>
    <action command="delete" search="walk.files" path="~/.exaile/covers/"/>
  </option>
  <option id="downloaded_podcasts">
    <label>Downloaded podcasts</label>
    <description>Delete downloaded podcasts</description>
    <action command="delete" search="walk.files" path="~/.exaile/podcasts/"/>
  </option>
  <option id="log">
    <label>Logs</label>
    <description>Delete the logs</description>
    <action command="delete" search="file" path="~/.exaile/exaile.log"/>
  </option>
</cleaner>
