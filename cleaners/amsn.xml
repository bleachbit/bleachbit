<cleaner id="amsn" os="linux">
  <label>aMSN</label>
  <description>Chat client</description>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="glob" path="~/.amsn/*/displaypic/cache/*.dat"/>
    <action command="delete" search="glob" path="~/.amsn/*/displaypic/cache/*.png"/>
  </option>
  <option id="chat_logs">
    <label>Chat logs</label>
    <description>Delete the chat logs</description>
    <action command="delete" search="glob" path="~/.amsn/*/logs/date"/>
    <action command="delete" search="glob" path="~/.amsn/*/logs/*.log"/>
  </option>
</cleaner>
