<cleaner id="pidgin">
  <label>Pidgin</label>
  <description>Chat client</description>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <!-- avatars -->
    <action command="delete" search="walk.all" path="~/.purple/icons/"/>
    <action command="delete" search="walk.all" path="$APPDATA\.purple\icons\"/>
  </option>
  <option id="logs">
    <label>Chat logs</label>
    <description>Delete the chat logs</description>
    <action command="delete" search="walk.all" path="~/.purple/logs/"/>
    <action command="delete" search="walk.all" path="$APPDATA\.purple\logs\"/>
  </option>
</cleaner>
