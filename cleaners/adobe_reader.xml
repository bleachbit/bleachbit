<cleaner id="adobe_reader">
  <label>Adobe Reader</label>
  <running type="exe">acroread</running>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.files" path="~/.adobe/Acrobat/7.0/Cache"/>
    <action command="delete" search="walk.files" path="~/.adobe/Acrobat/8.0/Cache"/>
    <action command="delete" search="walk.files" path="~/.adobe/Acrobat/9.0/Cache"/>
    <action command="delete" search="walk.files" path="$localappdata\Adobe\Acrobat\6.0\Cache"/>
    <action command="delete" search="walk.files" path="$localappdata\Adobe\Acrobat\7.0\Cache"/>
    <action command="delete" search="walk.files" path="$localappdata\Adobe\Acrobat\8.0\Cache"/>
    <action command="delete" search="walk.files" path="$localappdata\Adobe\Acrobat\9.0\Cache"/>
    <action command="delete" search="glob" path="$USERPROFILE\AppData\LocalLow\Adobe\Acrobat\9.0\Search\*.idx"/>
  </option>
  <option id="mru">
    <label>Most recently used</label>
    <description>Delete the list of recently used documents</description>
    <action command="delete" search="file" path="~/.adobe/Acrobat/7.0/Preferences/reader_prefs"/>
    <action command="delete" search="file" path="~/.adobe/Acrobat/8.0/Preferences/reader_prefs"/>
    <action command="delete" search="file" path="~/.adobe/Acrobat/9.0/Preferences/reader_prefs"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\5.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\6.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\7.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\8.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\9.0\AVGeneral\cRecentFiles"/>
  </option>
  <option id="tmp">
    <label>Temporary files</label>
    <description>Delete the temporary files</description>
    <action command="delete" search="glob" path="/dev/shm/sem.ADBE_*_$LOGNAME"/>
  </option>
</cleaner>
