<cleaner id="profanity" os="unix">
  <label>Profanity</label>
  <description>XMPP messenger</description>
  <option id="downloads">
    <label>Downloads</label>
    <description>Delete downloaded files</description>
	<action command="delete" search="walk.files" path="~/.local/share/profanity/downloads/"/>
  </option>
  <option id="logs">
    <label>Log files</label>
    <description>Delete log files</description>
	<action command="delete" search="walk.files" path="~/.local/share/profanity/logs/"/>
  </option>
</cleaner>
