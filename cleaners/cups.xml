<cleaner id="cups" os="linux">
  <label>CUPS</label>
  <description>CUPS cleanup</description>
  <option id="spool">
    <label>spool folder</label>
    <description>Delete the spool folder</description>
    <action command="delete" search="glob" path="/var/spool/cups/*"/>
  </option>
</cleaner>
