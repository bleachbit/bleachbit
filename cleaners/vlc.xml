<cleaner id="vlc">
  <label>VLC media player</label>
  <description>Media player</description>
  <!-- Don't know if the check of the task is really necessary... Tobias. -->
  <running type="exe" os="windows">vlc.exe</running>
  <running type="exe" os="linux">vlc</running>
  <!--
  BSD tasks not yet figured out!
  <running type="exe" os="FreeBSD">vlc</running>
  <running type="exe" os="NetBSD">vlc</running>
  <running type="exe" os="OpenBSD">vlc</running>
  -->
  <var name="Profile">
    <value search="glob" os="windows">%AppData%\vlc</value>
    <value search="glob" os="linux">$XDG_CONFIG_HOME/vlc</value>
    <!--
    BSD $$Profile$$ not yet figured out!
    <value search="glob" os="FreeBSD">$XDG_CONFIG_HOME/vlc</value>
    <value search="glob" os="NetBSD">$XDG_CONFIG_HOME/vlc</value>
    <value search="glob" os="OpenBSD">$XDG_CONFIG_HOME/vlc</value>
    -->
  </var>
  <var name="Config-File">
    <value search="glob" os="windows">vlc-qt-interface.ini</value>
    <value search="glob" os="linux">vlc-qt-interface.conf</value>
    <!--
    BSD $$Config-File$$ not yet figured out!
    <value search="glob" os="FreeBSD">vlc-qt-interface.conf</value>
    <value search="glob" os="NetBSD">vlc-qt-interface.conf</value>
    <value search="glob" os="OpenBSD">vlc-qt-interface.conf</value>
    -->
  </var>
  <option id="mru">
    <label>Most recently used</label>
    <description>Delete the most recently used list</description>
    <action search="file" path="$$Profile$$\$$Config-File$$" command="ini" section="General" parameter="filedialog-path"/>
    <action search="file" path="$$Profile$$\$$Config-File$$" command="ini" section="RecentsMRL"/>
    <action search="file" path="$$Profile$$\$$Config-File$$" command="ini" section="OpenDialog" parameter="netMRL"/>
    <action command="delete" search="walk.files" path="$$Profile$$\art\artistalbum\*"/>
  </option>
  <option id="memory-dump">
    <label>Memory dump</label>
    <description>Delete the data</description>
    <action command="delete" search="file" path="$$Profile$$\crashdump"/>
  </option>
</cleaner>
